{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$components": ["src/components"],
			"$components/*": ["src/components/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"tests/**/*.ts",
		"tests/**/*.js",
		"tests/**/*.svelte",
		".eslintrc.cjs",
		"svelte.config.js",
		"vite.config.ts",
		"tailwind.config.cjs",
		"postcss.config.cjs",
		".svelte-kit/ambient.d.ts",
		".svelte-kit/types/**/$types.d.ts"
	]
}
